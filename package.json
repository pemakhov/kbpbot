    "@types/http-status-codes": "1.2.0",
    "@types/joi": "^14.3.4",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.11.1",
    "@types/pug": "^2.0.4",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
